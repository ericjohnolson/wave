@using WavePoetry.DataAccess

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Wave Poetry</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- THEME Styles -->
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Scripts -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <style>
        h1, h2 {
            font-size:30px;
        }
    </style>
</head>
<body>

    <!-- Navbar
    ================================================== -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="../">Wave Poetry Contacts</a>

                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                    <div class="nav-collapse collapse" id="main-menu">
                        <ul class="nav pull-right" id="main-menu-right">

                            <li><a href="/Contact/">Contacts</a></li>
                            <li><a href="/Title/Search">Titles</a></li>
                            <li><a href="/Shipping/">Shipments</a></li>
                            <li><a href="/Award/">Awards</a></li>
                            <li><a href="/Review/">Reviews</a></li>


                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">User <b class="caret"></b></a>
                                <ul class="dropdown-menu" id="swatch-menu">

                                    <li>
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                    </li>
                                    @if (HttpContext.Current.Session["LoggedInUser"] != null)
                                    {
                                        var user = (HttpContext.Current.Session["LoggedInUser"] as user);
                                        if (user.is_admin)
                                        {
                                        <li><a href="/Admin/ListUsers">Users</a></li>
                                        <li><a href="/Admin/ListContactCats">Contact Categories</a></li>
                                        <li><a href="/Admin/ListAwardCats">Award Categories</a></li>
                                        }
                                    }
                                </ul>
                            </li>
                        </ul>
                    </div>
                            
                    }
                }
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 90px;">
        @RenderSection("featured", required: false)


        @RenderBody()

        <!-- Footer
      ================================================== -->
        <hr style="margin-top: 80px;">

        <footer id="footer">
            <p class="pull-right"><a href="#top">Back to top</a></p>
            <p>
                Made by Iota Ink & <a href="http://ericdidit.com">Eric John Olson</a>. Template and styles based on <a href="http://twitter.github.com/bootstrap/">Bootstrap</a>. 
            </p>
        </footer>


    </div>
    <!-- /container -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>


