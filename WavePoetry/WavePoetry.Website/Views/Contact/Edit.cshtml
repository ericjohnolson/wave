@model WavePoetry.Model.Contact

@{
    ViewBag.Title = Model.DisplayName;
}


@using (Html.BeginForm("Edit", "Contact", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <h2>@Model.DisplayName</h2>
    
    @Html.ValidationSummary(true)

    @Html.EditorForModel()

    <p style="text-align:right;"><em>Last Updated: @Model.LastUpdated</em></p>
    @Html.HiddenFor(model => model.DisplayName)
    @Html.HiddenFor(model => model.LastUpdated)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

