@model IEnumerable<WavePoetry.Model.Category>

@{
    ViewBag.Title = "Contact Categories";
}

<h2>Contact Categories</h2>

<p >
        @Html.ActionLink("Create New", "CreateContact", "Admin", new { @class = "test" })
</p>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed" id="dataTable" style="font-size: 0.8em;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditContact", new {  id=item.Id  }) 
        </td>
    </tr>
}

</table>
